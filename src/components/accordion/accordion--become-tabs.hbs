<div class="silc-accordion silc-accordion--{{modifier}}">
    <nav class="silc-accordion__nav">
        <ul class="silc-accordion__nav-items">
            {{#each sections}}
            <li class="silc-accordion__nav-item"><a class="silc-accordion__nav-link" href="#{{../id}}-{{@index}}">{{title}}</a></li>
            {{/each}}
        </ul>
    </nav>
    {{#each sections}}
    <section class="silc-accordion__section" id="{{../id}}-{{@index}}">
        <header class="silc-accordion__header">
            <h2 class="silc-accordion__label">{{title}}</h2>
        </header>
        <div class="silc-accordion__content">{{{content}}}</div>
    </section>
    {{/each}}
</div>
